using System; 
namespace myapp //code 1
{
    class Program
    {

        static void Main(string[] args)
        {
            Console.Write("Nome: ");
            string nome = Console.ReadLine();

            double p1, p2, p3, m;

            Console.Write("Nota da Prova 1: ");
            p1 = double.Parse(Console.ReadLine());

            Console.Write("Nota da Prova 2: ");
            p2 = double.Parse(Console.ReadLine());

            Console.Write("Nota da Prova 3: ");
            p3 = double.Parse(Console.ReadLine());

            m = (p1 * 2 + p2 * 2 + p3 * 4) / 8;

            Console.WriteLine("A média ponderada de " + nome + " é: " + m);

            if (m >= 6)
                { Console.WriteLine("--- Aprovado! ---"); }
            else
            { Console.WriteLine("x- Reprovado! -x"); }
        }
    }
}

using System; 
namespace MyApp //code 2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Escreva o nome completo: ");
            int peso2, peso4, peso6;
            string nome = (Console.ReadLine());
            double prova1, prova2, prova3, media1, media2, provacpeso2, provacpeso4, provacpeso6;
            peso2 = 2; peso4 = 4; peso6 = 6;
            Console.WriteLine("Nota da primeira prova: ");
            prova1 = double.Parse(Console.ReadLine());
            Console.WriteLine("Nota da segunda prova: ");
            prova2 = double.Parse(Console.ReadLine());
            Console.WriteLine("Nota da terceira prova: ");
            prova3 = double.Parse(Console.ReadLine());
            provacpeso2 = prova1 * peso2;
            provacpeso4 = prova2 * peso4;
            provacpeso6 = prova3 * peso6;
            media2 = provacpeso2 + provacpeso4 + provacpeso6;
            media1 = media2 / 12;
            Console.WriteLine("Nome Completo: " + nome);
            Console.WriteLine("Média final: " + media1);
        }
    }
}
